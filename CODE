import tkinter as tk

#new window
window = tk.Tk()
window.title("Registration Form")
window.configure(background= "green")

#Define the fields
name_label = tk.Label(window, text="Name")
name_entry = tk.Entry(window)

course_label = tk.Label(window, text="Course")
course_entry = tk.Entry(window)

semester_label = tk.Label(window, text="Semester")
semester_entry = tk.Entry(window)

form_no_label = tk.Label(window, text="Form No.")
form_no_entry = tk.Entry(window)

contact_no_label = tk.Label(window, text="Contact No.")
contact_no_entry = tk.Entry(window)

email_label = tk.Label(window, text="Email ID")
email_entry = tk.Entry(window)

address_label = tk.Label(window, text="Address")
address_entry = tk.Entry(window)

#Position the fields on the window
name_label.grid(row=0, column=0)
name_entry.grid(row=0, column=1)

course_label.grid(row=1, column=0)
course_entry.grid(row=1, column=1)

semester_label.grid(row=2, column=0)
semester_entry.grid(row=2, column=1)

form_no_label.grid(row=3, column=0)
form_no_entry.grid(row=3, column=1)

contact_no_label.grid(row=4, column=0)
contact_no_entry.grid(row=4, column=1)

email_label.grid(row=5, column=0)
email_entry.grid(row=5, column=1)

address_label.grid(row=6, column=0)
address_entry.grid(row=6, column=1)

#StopIterationsubmit button
submit_button = tk.Button(window, text="Submit")
submit_button.grid(row=7, column=0, columnspan=2)

#Start the window loop
window.mainloop()
